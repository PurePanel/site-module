{% extends layout('default') %}

{% block content %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-block card-body">
                <h3>Server Info:</h3>
                <small>Please save this data</small>
                <h5 style="margin-top: 20px;">SSH\SFTP</h5>
                <p>Host: {{ server.ip }}</p>
                <p>Port: 22</p>
                <p>Username: {{ site.username }}</p>
                <p>Password: {{ site.password }}</p>
                <p>Path: /home/{{ site.username }}/web/{{ path }} </p>

                <hr>
                <h5>Database</h5>
                <p>Host: 127.0.0.1</p>
                <p>Port: 3306</p>
                <p>Username: {{ site.username }}</p>
                <p>Password: {{ site.database }}</p>
            </div>
        </div>
    </div>
{% endblock %}
